<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="312dp"
        android:layout_height="166dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="104dp"
        android:background="#73BEE1"
        android:backgroundTint="#8CDCE6"
        android:gravity="center"
        android:text="Menu hành động thường được hiển thị dưới dạng ba dấu chấm dọc (⋮) ở góc trên bên phải của màn hình."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="204dp"
        android:background="#D89E49"
        android:backgroundTint="#BBEC83"
        android:gravity="center"
        android:text="Có thể sắp xếp thứ tự lựa chọn bằng các thuộc tính ."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="281dp"
        android:layout_height="125dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="36dp"
        android:background="#D89E49"
        android:backgroundTint="#EC85A8"
        android:gravity="center"
        android:text="Cũng có thể lồng một menu khác trong menu đã có, hoặc thể hiện bằng một icon"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>